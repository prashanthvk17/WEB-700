<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}</h2>
        <hr />

        <!-- Update Student Form -->
        <form method="POST" action="/student/update">
            <!-- Hidden Input for Student Number -->
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />

            <!-- Personal Information Section -->
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" value="{{viewData.student.email}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Address Information Section -->
            <fieldset>
                <legend>Address</legend>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Street:</label>
                            <input class="form-control" name="addressStreet" type="text" value="{{viewData.student.addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>City:</label>
                            <input class="form-control" name="addressCity" type="text" value="{{viewData.student.addressCity}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Province:</label>
                            <input class="form-control" name="addressProvince" type="text" value="{{viewData.student.addressProvince}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Academic Information Section -->
            <fieldset>
                <legend>Academic Information</legend>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="TA" name="TA" {{#if viewData.student.TA}}checked{{/if}} />
                            <label class="form-check-label" for="TA">Teaching Assistant</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Status:</label><br />
                        <label class="radio-inline">
                            <input type="radio" name="status" value="Full Time" {{#if (viewData.student.status === 'Full Time')}}checked{{/if}} /> Full Time
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="status" value="Part Time" {{#if (viewData.student.status === 'Part Time')}}checked{{/if}} /> Part Time
                        </label>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="course">Course:</label>
                            {{#if viewData.courses}}
                            <select class="form-control" id="course" name="course">
                                <option value="">Select Course</option>
                                {{#each viewData.courses}}
                                <option value="{{courseId}}" {{#if selected}}selected{{/if}}>{{courseCode}}</option>
                                {{/each}}
                            </select>
                            {{else}}
                            <div>No Courses</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
        </form>
    </main>
</div>
