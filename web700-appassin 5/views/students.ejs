<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Students</h2>
        <hr />

        <!-- Add New Student Button -->
        <a href="/students/add" class="btn btn-success float-right mb-3">Add New Student</a>

        <!-- Error Message Handling -->
        {{#if message}}
        <div class="alert alert-warning text-center">
            <strong>{{message}}</strong>
        </div>
        {{/if}}

        <!-- Students Table -->
        {{#if students}}
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Student Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>TA</th>
                        <th>Status</th>
                        <th>Course</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each students}}
                    <tr>
                        <td>{{studentNum}}</td>
                        <td>
                            <a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a>
                        </td>
                        <td>
                            <a href="mailto:{{email}}">{{email}}</a>
                        </td>
                        <td>
                            {{addressStreet}}, {{addressCity}}, {{addressProvince}}
                        </td>
                        <td>{{#if TA}}Yes{{else}}No{{/if}}</td>
                        <td>{{status}}</td>
                        <td>
                            <a href="/students?course={{course}}">{{course}}</a>
                        </td>
                        <td>
                            <a href="/student/delete/{{studentNum}}" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="alert alert-info text-center">
            <strong>No students available.</strong>
        </div>
        {{/if}}
    </div>
</div>
